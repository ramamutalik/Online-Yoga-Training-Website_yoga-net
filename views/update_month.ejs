<link rel="stylesheet" href="/css/calender.css">
<!-- Header -->
<header id="header">
    <nav>
        <div class="container">
            <div class="text-center">
                <a href="/" class="nav-brand text-dark">Calender of Events</a>
            </div>
        </div>
    </nav>
</header>
<!-- /Header -->

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/calender"><i class="fas fa-angle-double-left"></i> All Months</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Month</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
        <!-- form handling -->
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="month" class="text-light">Month</label>
                    <input type="hidden" name="id" value="<%= cal._id %>">
                    <input type="text" name="month" value="<%= cal.month %>" placeholder="Jan">
                </div>
                <div class="form-group">
                    <label for="year" class="text-light">Year</label>
                    <input type="text" name="year" value="<%= cal.year%>" placeholder="2022">
                </div>
                <div class="form-group">
                    <label for="date" class="text-light">Date</label>
                    <input type="text" name="date" value="<%= cal.date %>" placeholder="DD-MM">
                </div>

                <div class="form-group">
                    <label for="day" class="text-light">Day</label>
                    <input type="text" name="day" value="<%= cal.day %>" placeholder="Mon">
                </div>

                <div class="form-group">
                    <label for="timing" class="text-light">Timimg</label>
                    <input type="text" name="timing" value="<%= cal.timimg %>" placeholder="1am">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>

            </div>
        </form>

    </div>
</main>
<!-- /Main Site -->

